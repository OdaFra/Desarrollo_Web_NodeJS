extends ../layout/index


block contenido
    div.py-10
        h1.text-4xl-my-10.font-extrabold.text-center Bienes
            spam.font-normal Raices
        h2.text-center.text-2xl=pagina

        div.mt-8.mx-auto.max-w-md
            .bg-white.py-8.px-4.shadow
                form.space-y-3
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="email") Email
                        input#nombre.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Tu Email", type="email" name="email")
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="password") Password
                        input#nombre.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(
                            placeholder="Tu Password", type="password" name="password")

                    input( class ="w-full bg-blue-400 hover:bg-blue-600 text-white font-bold py-2 cursor-pointer" 
                    type="submit" value="Iniciar Sesion")   
                    